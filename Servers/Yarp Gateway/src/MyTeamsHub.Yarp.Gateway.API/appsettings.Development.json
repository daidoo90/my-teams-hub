{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "HealthCheckOptions": {
      "DetectionWindowSize": "00:00:30",
      "MinimalTotalCountThreshold": 5,
      "DefaultFailureRateLimit": 0.5
    },
    "Routes": {
      "default-route": {
        "ClusterId": "default-cluster",
        "AuthorizationPolicy": "Nomenclatures",
        "Match": {
          "Path": "{**catch-all}"
        }
      },
      "organizations-route": {
        "ClusterId": "organizations-cluster",
        "OutputCachePolicy": "default-cache-policy",
        "AuthorizationPolicy": "AuthenticatedOnly",
        "Match": {
          "Path": "/organizations/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1"
          }
        ],
        "RateLimiterPolicy": "default-rate-limiter-policy",
        "TimeoutPolicy": "default-timeout-policy"
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "AuthorizationPolicy": "AuthenticatedOnly",
        "Match": {
          "Path": "/users"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1"
          }
        ]
      },
      "external-route": {
        "ClusterId": "external-organizations-cluster",
        "AuthorizationPolicy": "ApiKey",
        "Match": {
          "Path": "/teams-hub/organizations/{**catch-all}"
        },
        "Transforms": [
          {
            "PathSet": "/api/v1/organizations"
          }
        ]
      }
    },
    "Clusters": {
      "default-cluster": {
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:10",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        },
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://myteamshub.organization.api:4000"
          },
          "destination2": {
            "Address": "http://myteamshub.organization.api:4000"
          },
          "destination3": {
            "Address": "http://myteamshub.organization.api:4000"
          }
        }
      },
      "organizations-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://myteamshub.organization.api:4000"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://myteamshub.organization.api:4000"
          }
        }
      },
      "external-organizations-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://myteamshub.organization.api:4000"
          }
        }
      }
    }
  }
}
