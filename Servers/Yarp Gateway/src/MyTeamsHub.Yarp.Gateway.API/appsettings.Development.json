{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "default-route": {
        "ClusterId": "default-cluster",
        "Match": {
          "Path": "/api/v1/nomenclatures/{**catch-all}"
        }
      },
      "organizations-route": {
        "ClusterId": "organizations-cluster",
        "Match": {
          "Path": "/organizations"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1"
          }
        ],
        "RateLimiterPolicy": "default-rate-limiter-policy",
        "TimeoutPolicy": "default-timeout-policy"
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/users"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1"
          }
        ]
      }
    },
    "Clusters": {
      "default-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:4000"
          },
          "destination2": {
            "Address": "http://localhost:4000"
          },
          "destination3": {
            "Address": "http://localhost:4000"
          }
        }
      },
      "organizations-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:4000"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:4000"
          }
        }
      }
    }
  }
}
