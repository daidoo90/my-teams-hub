{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "default",
        "Match": {
          "Path": "/api/v1/nomenclatures/{**catch-all}"
        }
      },
      "route2": {
        "ClusterId": "organizations",
        "Match": {
          "Path": "/organizations"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1"
          }
        ]
      },
      "users": {
        "ClusterId": "users",
        "Match": {
          "Path": "/users"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1"
          }
        ]
      }
    },
    "Clusters": {
      "default": {
        "LoadBalancingPolicy": "RoundRobin",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:4000"
          },
          "destination2": {
            "Address": "http://localhost:4000"
          },
          "destination3": {
            "Address": "http://localhost:4000"
          }
        }
      },
      "organizations": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:4000"
          }
        }
      },
      "users": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:4000"
          }
        }
      }
    }
  }
}
